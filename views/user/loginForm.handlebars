<div class="login-container">
  <div class="middle-login">
        <form id="loginform" onsubmit="return validateUserLoginForm()" method="post" action="/login">
            <div class="form-group">
              <div class="col-sm-12">
                <label for="username">Email</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter email" value="{{email}}">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" value="{{password}}">
              </div>
            </div>
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here">
                </div>
            </div>
            {{#if message}}
                <div class="alert alert-danger strong" id="userCheck">
                    <p>{{message}}</p>
                </div>
            {{/if}}
            <div class="form-group">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-default">Login</button>
              </div>
            </div>
            <div class="col-sm-12 strong">
              <a href="/signup">Sign Up</a>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <a href="/forgotpassword">Forgot password?</a>
              </div>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="../public/css/login.css">
