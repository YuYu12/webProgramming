<div>
    <table style="width: 100%">
        <tr>
            <td style="padding-left: 80px">
                <h3>Hello, {{user.firstName}}</h3>
            </td>
            <td>
                <strong><a href="/logout"><h3>Sign out</h3></a></strong>
            </td>
        </tr>
        <tr>
            <td style="padding-left: 40px">
                <div class="innerDiv">
                    <strong><a href="/myProfile">Back to profile</a></strong>
                </div>
            </td>
        </tr>
    </table>
    <table style="width: 40%">
        {{#each products}}
        <div class="row">
            <h2><a href="/products/{{_id}}">{{title}}</a></h2>
            <div class="col-xs-6">
                <img src="/{{productImage}}" class="img-rounded" width="150" height="110" alt="product" />
            </div>
            <div class="col-xs-6">
                <p>Title: {{title}}</p>
                <p>Description: {{description}}</p>
                <p>Condition: {{condition}}</p>
                <span class="label label-info">{{status}}</span>
            </div>
        </div>
        {{/each}}

    </table>
</div>

