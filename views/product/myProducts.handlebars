<div class="headerDiv">
    <table style="width: 100%">
        <tr>
            <td style="padding-left: 80px">
                <h3>Hello, {{user.firstName}}</h3>
            </td>
            <td>
                <strong><a href="/logout"><h3>Sign out</h3></a></strong>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                    <strong><a href="/myProfile">Back to profile</a></strong>
            </td>
        </tr>
    </table>
</div>
<div class="outerDiv">
    <div class="innerDiv">
        <table>
        {{#each products}}
        <tr>
            <td><h3><ul><li><a href="/products/{{_id}}">{{title}}</li></ul></a></h3></td>  
        </tr>
        <tr>
            <td style="padding-left: 80px;">{{description}}</td>
        </tr>
        <tr> 
             <td style="padding-left: 80px;">
                 <div class="innerDiv">
                    <img src="/{{productImage}}" style="width: 200px; height: 200px"/>
                </div>
            </td>      
           
        </tr>
        {{/each}}
        </table>
    </div>
</div>


<style>
    .headerDiv + .outerDiv
    {
        margin-top:40px;
    }


    .outerDiv {
        display: flex;
        width: 100px;
        align-items: center; 
    }

    .innerDiv {
        flex: 1;
        padding: 1em;
        padding-left: 200px
    }

    a {
        color: #FFFFFF;
    }
    
</style>
