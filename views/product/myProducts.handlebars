<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      {{#if products}}
         <table>
        {{#each products}}
          <tr>
            <td>
              <h1><a href="/products/{{_id}}">{{title}}</a></h1>
              <img src="/{{productImage}}" class="img-rounded" width="150" height="110" alt="product" />
            </td>
            <!--<td style="padding-left: 30px"></td>-->
            <td>
              <p>Description: {{description}}</p>
              <p>Condition: {{condition}}</p>
              <p>Price: ${{price}}</p>
            </td>
          </tr>
        {{/each}}
        </table>
      {{else}}
        <h1>You currently have no products.</h1>
        <h2><a href="/sell/sellProduct">Add a product here.</a></h2>
      {{/if}}
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

<link rel="stylesheet" href="../public/css/myProducts.css">
